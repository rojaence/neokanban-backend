generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "security", "manager"]
}

model Action {
  id            String      @id @default(uuid()) @db.Uuid
  name          String          @unique
  description   String?
  profileOptions ProfileOption[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("sec_actions")
  @@schema("security")
}

model Module {
  id          String      @id @default(uuid()) @db.Uuid
  name        String
  description String?
  uri         String   @default("")
  options      Option[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("sec_modules")
  @@schema("security")
}

model Option {
  name          String          @unique
  description   String?
  moduleId      String          @db.Uuid
  id            String      @id @default(uuid()) @db.Uuid
  iconName      String?
  uri           String          @default("")
  module        Module          @relation(fields: [moduleId], references: [id])
  profileOptions ProfileOption[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("sec_options")
  @@schema("security")
}

model Profile {
  id            String      @id @default(uuid()) @db.Uuid
  name          String          @unique
  description   String?
  profileOptions ProfileOption[]
  userProfiles   UserProfile[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("sec_profiles")
  @@schema("security")
}

model ProfileOption {
  profileId String      @db.Uuid
  actionId  String      @db.Uuid
  id        String      @id @default(uuid()) @db.Uuid
  optionId  String      @db.Uuid
  action    Action  @relation(fields: [actionId], references: [id])
  option    Option  @relation(fields: [optionId], references: [id])
  profile   Profile @relation(fields: [profileId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("sec_profile_options")
  @@schema("security")
}

model Task {
  id          String      @id @default(uuid()) @db.Uuid
  title       String
  description String?
  userId      String      @db.Uuid
  user        User    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("man_tasks")
  @@schema("manager")
}


model User {
  id          String      @id @default(uuid()) @db.Uuid
  name        String
  surname     String
  email       String        @unique
  password    String
  username    String        @unique
  tasks        Task[]
  userProfiles UserProfile[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("sec_users")
  @@schema("security")
}

model UserProfile {
  userId    String  @db.Uuid 
  profileId String  @db.Uuid
  profile   Profile @relation(fields: [profileId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, profileId])
  @@map("sec_user_profiles")
  @@schema("security")
}
